#include <iostream>
using namespace std;

const int prov = 3;
const int day = 7;

int main()
{
    int temp[prov][day];

    cout << "Enter the temperatures for provinces A, B and C. \n" ;
	for (int x = 0; x < prov; ++x)
    {
    for(int y = 0; y < day; ++y)
    {
    cout << "Province " << x + 1 << ", Day " << y + 1 << " : ";
     cin >> temp[x][y];
        }
    }
    cout << "\n\nTemperature: ";

    
    for (int x = 0; x < prov; ++x)
    {
        for(int y = 0; y < day; ++y)
        {
            cout << "Province  = " << x + 1 << ", Day " << y + 1 << " = " << temp[x][y] << "\n" ;
        }
    }
    return 0;
}
